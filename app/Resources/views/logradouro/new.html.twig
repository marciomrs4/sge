{% extends ':template:template.html.twig' %}


    {% block contentheader %}

        <section class="content-header">
            <h1>
                Logradouro
                <small>Novo</small>
            </h1>
        </section>

    {% endblock %}


    {% block panelheading %}

        <div class="row">

        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('cadastro_pais_show',{ 'id': pai.id }) }}" class="btn btn-primary btn-sm link-search">
                <span class="fa fa-reply"></span>
                Voltar
            </a>

        </div>
        </div>{% endblock %}


    {% block panelbody %}

        {{ form_start(form) }}
        {{ form_widget(form) }}

    {% endblock %}

    {% block panelfooter %}
        <div class="input-load">
            <button type="submit" class="btn btn-primary btn-sm input-search">
                <span class="glyphicon glyphicon-floppy-disk"></span>
                Salvar
            </button>
        </div>
        {{ form_end(form) }}

    {% endblock %}

    {% block javascripts %}

        {{ parent() }}

        <script src="{{ asset('bundles/mrssge/js/jquery.mask.js') }}"></script>

        <script>

            $(document).ready(function(){

                $('#logradouro_cep').mask('00000-000');

            });

        </script>

    {% endblock %}
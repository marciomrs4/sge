{% extends ':template:template.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

        <link rel="stylesheet" href="{{ asset("bundles/mrssge/css/dataTables.bootstrap.css") }}">

{% endblock %}


    {% block contentheader %}


    <section class="content-header">
        <h1>
            Aluno
            <small>Listar</small>
        </h1>
    </section>


    {% endblock %}

    {% block panelbody %}

        <div class="table-responsive">
            <table class="table table-bordered table-condensed table-hover table-striped table-datatable">
                <thead>
                <tr>
                    <th>Ações</th>
                    <th>Nome</th>
                    <th>Pai</th>
                    <th>Contatos</th>
                    <th>Escola</th>

                    <th>Valor mensalidade</th>
                    <th>Vencimento</th>

                </tr>
                </thead>
                <tbody>
                {% for aluno in alunos %}
                    <tr>
                        <td>
                            <a href="{{ path('cadastro_aluno_show', { 'id': aluno.id }) }}" class="btn btn-primary btn-xs link-search">
                                <span class="glyphicon glyphicon-eye-open"></span>

                            </a>
                            <a href="{{ path('cadastro_aluno_edit', { 'id': aluno.id }) }}" class="btn btn-primary btn-xs link-search">
                                <span class="glyphicon glyphicon-edit"></span>

                            </a>
                        </td>
                        <td>{{ aluno.nome }}</td>
                        <td>{{ aluno.pais.nome }}</td>
                        <td>{{ aluno.pais.telefone1 }} / {{ aluno.pais.telefone2 }}</td>
                        <td>{{ aluno.escola.nome }} / {{ aluno.turno.descricao }} </td>

                        <td>{{ aluno.valorMensalidade|number_format(2,',','.') }}</td>
                        <td>{% if aluno.vencimento %}{{ aluno.vencimento|date('d-m-Y') }}{% endif %}</td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

{% endblock %}


{% block javascripts %}
{{ parent() }}

    <script src="{{ asset("bundles/mrssge/js/jquery.dataTables.js") }}"></script>
    <script src="{{ asset("bundles/mrssge/js/dataTables.bootstrap.js") }}"></script>
    <script src="{{ asset("bundles/mrssge/js/mrs-dataTable.js") }}"></script>


{% endblock %}

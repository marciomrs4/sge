<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block title %}{{ namesystem }}{% endblock %}</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    {% block stylesheets %}
        <!-- Bootstrap 3.3.6 -->
        <link rel="stylesheet" href="{{ asset('bundles/mrssge/css/bootstrap.css') }}">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="{{ asset('bundles/mrssge/css/font-awesome.min.css') }}">
        <!-- Ionicons -->
        <link rel="stylesheet" href="{{ asset('bundles/mrssge/css/ionicons.min.css') }}">
        <!-- Theme style -->
        <link rel="stylesheet" href="{{ asset('bundles/mrssge/css/AdminLTE.css') }}">
        <!-- AdminLTE Skins. Choose a skin from the css/skins
             folder instead of downloading all of them to reduce the load. -->
        <link rel="stylesheet" href="{{ asset('bundles/mrssge/css/skin-blue.css') }}">
        <!-- pace.css -->
        <link rel="stylesheet" href="{{ asset('bundles/mrssge/css/pace.css') }}">

        <link rel="stylesheet" href="{{ asset('bundles/mrssge/css/select2-bootstrap.css') }}">

    {% endblock %}

    {#
        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    #}

</head>
<body class="hold-transition skin-blue sidebar-mini fixed sidebar-collapse">

<div class="wrapper">

    <header class="main-header">
        <!-- Logo -->
        <a href="{{ path('home') }}" class="logo">
            <!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-mini"><b>{{ sigla }}</b></span>
            <!-- logo for regular state and mobile devices -->
            <span class="logo-lg">{{ namesystem }}</span>
        </a>
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top">
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
            </a>
            <!-- Navbar Right Menu -->
            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">

                    <li class="dropdown user user-menu">

                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">

                            <span class="glyphicon glyphicon-user"></span>
                            <span class="hidden-xs">
                                {#{{ app.user.usuCodigo.usuNome }}#}
                            </span>

                        </a>
                        <ul class="dropdown-menu">
                            <!-- User image -->

                            <li class="user-header">
                                <h1></h1>
                                <p>
                                    {% if app.user %}
                                    {{ app.user.username }}
                                    <small>{{ app.user.email }}</small>
                                    {% endif %}
                                </p>

                            </li>

                            <!-- Menu Footer-->
                            <li class="user-footer">

                                <div class="pull-left">
                                    <a href="{{ path('home') }}" class="btn btn-default btn-flat">
                                        <span class="glyphicon glyphicon-home"></span>
                                        Home
                                    </a>
                                </div>

                                <div class="pull-right">
                                    <a href="{{ path('user_logout') }}" class="btn btn-default btn-flat">
                                    <span class="glyphicon glyphicon-off"></span>
                                    Sair
                                    </a>
                                </div>

                            </li>

                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>


    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
            <!-- Sidebar user panel -->

            <!-- sidebar menu: : style can be found in sidebar.less -->
            <ul class="sidebar-menu">

                <li class="treeview">
                    <a href="{{ path('home') }}">
                        <i class="fa fa-paw"></i><span>Home</span>
                    </a>
                </li>


                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-object-group"></i>
                        <span>Operações</span>
                        <i class="fa fa-angle-left pull-right"></i>
                    </a>
                    <ul class="treeview-menu">
                        <li><a href="{{ path('cadastro_frequencia_index') }}"><i class="fa fa-money"></i>Frequência</a></li>

                        {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('cadastro_financas_index') }}"><i class="fa fa-money"></i>Pagamentos</a></li>
                        <li><a href="{{ path('cadastro_financas_report') }}"><i class="fa fa-money"></i>Relatório Financeiro</a></li>
                        {% endif %}
                    </ul>
                </li>

{% if is_granted('ROLE_ADMIN') %}

                <li class="treeview">

                    <a href="#">
                        <i class="fa fa-sliders"></i> <span>Cadastros</span>
                        <i class="fa fa-angle-left pull-right"></i>
                    </a>

                    <ul class="treeview-menu">

                        <li>
                            <a href="{{ path('cadastro_pais_index') }}"><i class="fa fa-university"></i>Pais</a>
                        </li>
                        <li>
                            <a href="{{ path('cadastro_aluno_all') }}"><i class="fa fa-university"></i>Alunos</a>
                        </li>
                        <li>
                            <a href="{{ path('cadastro_escola_index') }}"><i class="fa fa-sitemap"></i>Escolas</a>
                        </li>

                        <li>
                            <a href="#"><i class="fa fa-gears"></i>Cadastro de Lista<i class="fa fa-angle-left pull-right"></i></a>
                            <ul class="treeview-menu">
                                <li><a href="{{ path('cadastro_veiculo_index') }}"><i class="fa fa-desktop"></i>Veiculos</a></li>
                                <li><a href="{{ path('cadastro_turno_index') }}"><i class="fa fa-mobile"></i>Turnos</a></li>
                            </ul>
                        </li>

                    </ul>

                </li>

                <li class="treeview">
                    <a href="#">
                        <i class="glyphicon glyphicon-lock"></i>
                        <span>Acessos</span>
                        <i class="fa fa-angle-left pull-right"></i>
                    </a>
                    <ul class="treeview-menu">
                        <li><a href="{{ path('admin_usuario_index') }}"><i class="fa fa-male"></i>Login</a></li>
                    </ul>
                </li>
 {% endif %}

        </section>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->

        {% block contentheader %}
            {#<section class="content-header">#}
                {#<h1>#}
                    {#Dashboard#}
                    {#<small>home</small>#}
                {#</h1>#}

            {#</section>#}
        {% endblock %}

        <!-- Main content -->
        <section class="content">
            <!-- Small boxes (Stat box) -->

            {% block content %}

                <div class="row">

                    <div class="col-lg-3 col-md-3 col-sm-1 col-xs-1">

                    </div>


                    <div class="col-lg-6 col-md-6 col-sm-10 col-xs-10">

                        <!-- Widget: user widget style 1 -->
                        <div class="panel panel-default">

                            <div class="panel-heading bg-aqua-active">
                            </div>

                            <!-- /.box-header -->
                            <div class="panel-body">

                                <div class="box box-widget widget-user">
                                    <!-- Add the bg color to the header using any of the bg-* classes -->
                                    <div class="widget-user-header bg-aqua-active">
                                        <h3 class="widget-user-username">
                                            <strong>Tio(a)
                                                {% if app.user %}
                                                    {{ app.user.username }}
                                                {% endif %}
                                            </strong>
                                        </h3>
                                        <h5 class="widget-user-desc">
                                            {{ phrase }}
                                        </h5>
                                    </div>
                                    <div class="widget-user-image">
                                        {#<img class="img-circle" src="{{ asset('bundles/framework/images/logo_symfony.png') }}" alt="User Avatar">#}
                                    </div>
                                    <div class="box-footer">
                                        <div class="row">
                                            <div class="col-sm-4 border-right">
                                                <div class="description-block">
                                                    <h5 class="description-header">{{ sigla }}</h5>
                                                    <span class="description-text">{{ namesystem }}</span>
                                                </div>
                                                <!-- /.description-block -->
                                            </div>
                                            <!-- /.col -->
                                            <div class="col-sm-4 border-right">
                                                <div class="description-block">
                                                    <h5 class="description-header">{{ version }}</h5>
                                                    <span class="description-text">VERSÃO</span>
                                                </div>
                                                <!-- /.description-block -->
                                            </div>

                                            <div class="col-sm-4 border-right">
                                                <div class="description-block">
                                                    <h5 class="description-header">{{ 'now'|date('Y') }}</h5>
                                                    <span class="description-text">{{ teamcreator }}</span>
                                                </div>
                                                <!-- /.description-block -->
                                            </div>
                                            <!-- /.col -->

                                        </div>
                                        <!-- /.row -->
                                    </div>
                                </div>
                                <!-- /.widget-user -->


                            </div>
                            <!-- /.box-body -->

                        </div>

                    </div>

                    <div class="col-lg-3 col-md-3 col-sm-1 col-xs-1">

                    </div>

                </div>


            {% endblock %}

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    {% block footer %}
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>IP: {{ app.request.clientIp }}</b>
            </div>
            <small>InfTek - Tecnologia da Informação</small>
            <strong>&copy; {{ 'now'|date('Y') }}.</strong>
        </footer>
    {% endblock %}


</div>
<!-- ./wrapper -->

{% block javascripts %}
    <!-- jQuery 2.2.0 -->
    <script src="{{ asset('bundles/mrssge/js/jQuery-2.2.0.min.js') }}"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="{{ asset('bundles/mrssge/js/bootstrap.js') }}"></script>
    <!-- jquery.slimscroll -->
    <script src="{{ asset('bundles/mrssge/js/jquery.slimscroll.js') }}"></script>
    <!-- AdminLTE App -->
    <script src="{{ asset('bundles/mrssge/js/app.js') }}"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="{{ asset('bundles/mrssge/js/pace.min.js') }}"></script>
    <!-- jqueryConfirm  -->
    <script src="{{ asset('bundles/mrssge/js/jquery.confirm.js') }}"></script>

    <script>

        $(document).ajaxStart(function() { Pace.restart(); });


        /**
         * This function confirm all action about remove buttons
         */

        $(".remover-form").confirm({
            title: "É necessário confirmar essa ação",
            text: "Quer mesmo remover esse item ?",

            confirm: function(button){
                form.submit();
            },
            cancel: function(button) {
                // nothing to do
            },
            confirmButton: "Sim",
            submitForm: true,
            post: true,
            cancelButton: "Não",
            confirmButtonClass: "btn-danger",
            cancelButtonClass: "btn-primary",
            dialogClass: "modal-dialog modal-lg" // Bootstrap classes for large modal
        });

        $(".remover-link").confirm({
            title: "É necessário confirmar essa ação",
            text: "Quer mesmo remover esse item ?",

            cancel: function(button) {
                // nothing to do
            },
            confirmButton: "Sim",
            cancelButton: "Não",
            confirmButtonClass: "btn-danger",
            cancelButtonClass: "btn-primary",
            dialogClass: "modal-dialog modal-lg" // Bootstrap classes for large modal
        });


        //Usado para botoes que são Links
        $(".link-search").click(function(){

            $(this).replaceWith('<img src="{{ asset('load.gif') }}" />');

        });

        //usado para botoes input de formularios
        $(".input-search").click(function(){

            $(this).hide();

            $('.input-load').append('<img src="{{ asset('load.gif') }}" />');

        });


    </script>

{% endblock %}

</body>
</html>